<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/imgCartItem"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guitar Acoutics"
                android:lines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCartItemName"
                android:text="12.000.000 "
                android:textColor="@color/textColor"
                android:textSize="16dp" />
            <TextView
                android:layout_toEndOf="@id/tvCartItemPrice"
                android:id="@+id/tvCartItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCartItemName"
                android:text="x 2"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tvCartItemTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCartItemPrice"
                android:text="$ 24.000.000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>