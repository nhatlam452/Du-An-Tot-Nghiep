<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OnBoardingActivity">
    <ImageView
        android:id="@+id/imgLogoOnBoardingScreen"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_green"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:layout_marginTop="10dp"
        android:id="@+id/vpOnBoardingScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgLogoOnBoardingScreen"
        android:layout_above="@id/ciOnBoardingScreen"
        android:layout_marginBottom="20dp"
        />
    <me.relex.circleindicator.CircleIndicator3
        app:ci_drawable="@drawable/custom_indicator"
        android:id="@+id/ciOnBoardingScreen"
        android:layout_above="@id/btnGetStarted"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_height="10dp"/>

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="235dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_onboarding_screen"
        android:letterSpacing="0.05"
        android:lineHeight="33dp"
        android:text="Get Started"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="22dp" />
</RelativeLayout>