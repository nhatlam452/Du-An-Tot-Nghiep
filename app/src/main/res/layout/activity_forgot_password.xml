<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgotPasswordActivity">
    <ImageView
        android:id="@+id/imgLogoForgotPassword"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_green"
        />
    <ImageView
        android:id="@+id/imgBackForgotPassword"
        android:layout_marginStart="15dp"
        android:layout_gravity="left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_back"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:lineHeight="20dp"
        android:textStyle="bold"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="20dp"
        android:textAlignment="center"
        />
    <TextView
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:lineHeight="20dp"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:text="Don’t worry! Enter your registered phone number below to receive password instructions"
        android:textSize="15dp"
        android:textAlignment="center"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_6" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tipPhoneNumberForgotPassword"
        android:layout_width="345dp"
        android:hint="Phone Number"
        android:layout_height="wrap_content">
        <EditText
            android:lines="1"
            android:maxLength="10"
            android:inputType="number"
            android:id="@+id/edtPhoneNumberForgotPassword"
            android:textColor="#A6000000"
            android:textSize="14dp"
            android:lineHeight="20dp"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRP"
            android:layout_width="170dp"
            android:layout_height="23dp"
            android:lineHeight="22.5dp"
            android:text="Remember Password ?"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvLogInForgotPassword"
            android:layout_width="44dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@id/tvRP"
            android:lineHeight="22.5dp"
            android:text="Log In"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnResetPassword"
        android:lineHeight="20dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:text="Cofirm"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_oval"
        />
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDHAC"
            android:lineHeight="22.5dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_width="181dp"
            android:layout_height="23dp"
            android:text="Don’t have an account ?"
            />

        <TextView
            android:id="@+id/tvSignUpForgotPassword"
            android:layout_width="58dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@id/tvDHAC"
            android:lineHeight="22.5dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>