<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:gravity="center_horizontal"
    tools:context=".Activities.RegisterSuccessActivity">
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imgLogoOnBoardingScreen"
        android:scaleType="centerCrop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_green"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:lineHeight="31.5dp"
        android:textSize="21dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_width="124dp"
        android:layout_height="24dp"
        android:text="All Done"
        />
    <TextView
        android:layout_marginTop="25dp"
        android:lineHeight="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:text="Thanks for giving us your precious time. Now you are ready for an enjoyable moment."
        />
    <ImageView
        android:layout_marginVertical="20dp"
        android:src="@drawable/img_8"
        android:layout_width="334dp"
        android:layout_height="282dp"/>
    <Button
        android:id="@+id/btnRegisterSuccess"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_oval"
        android:text="Let's go"
        android:textSize="18dp"
        android:lineHeight="20dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        />
</LinearLayout>