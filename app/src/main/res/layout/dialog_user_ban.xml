<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="69dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo_green" />
    <TextView
        android:textStyle="bold"
        android:lineHeight="24dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gz_musical_sorry_for_this_inconvenience"
        />
    <TextView
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_account_have_been_disable_please_contact_to_0909916020_to_have_more_information"
        />
    <Button
        android:id="@+id/btnBanAccount"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        />
</LinearLayout>