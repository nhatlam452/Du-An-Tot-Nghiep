<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Fragments.CartFragment">

    <RelativeLayout
        android:id="@+id/rltToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="40dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_logo_white" />

        <ImageView
            android:id="@+id/imgCartOpenSetting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_drawer" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rltToolbar"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cartTabColor"
            android:gravity="center"
            android:lineHeight="20dp"
            android:text="DELIVERY"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lineHeight="20dp"
            android:text="GO TO STORE"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llTab"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="367dp"
                        android:layout_height="164dp"
                        android:background="@drawable/img_19"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingStart="20dp">

                            <ImageView
                                android:id="@+id/imgPin"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/img_20" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toRightOf="@id/imgPin"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineHeight="20dp"
                                    android:text="Gz Musical CMT8"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:lineHeight="20dp"
                                    android:text="241 Xuan Thuy, Dich Vong Hau, Cau Giay, Hanoi"
                                    android:textColor="@color/textColor"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="30dp"
                                android:src="@drawable/ic_edit_location" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:paddingStart="20dp">

                            <View
                                android:layout_width="279dp"
                                android:layout_height="1dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginEnd="25dp"
                                android:background="#33000000" />

                            <LinearLayout
                                android:id="@+id/view"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:gravity="center">

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:background="@drawable/custom_eslipe" />
                            </LinearLayout>


                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toRightOf="@id/view"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineHeight="20dp"
                                    android:text="Hanoi University"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:lineHeight="20dp"
                                    android:text="Km9, Nguyen Trai Street, Nam Tu Liem, Hanoi"
                                    android:textColor="@color/textColor"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="30dp"
                                android:src="@drawable/ic_edit_location" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="137dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custom_button_oval"
                    android:gravity="center"
                    android:lineHeight="20dp"
                    android:text="Your order"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:lineHeight="20dp"
                    android:text="add more"
                    android:textColor="#DE8737"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvCartFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_rcv_border"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp" />

            <TextView
                android:layout_width="137dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button_oval"
                android:gravity="center"
                android:lineHeight="20dp"
                android:text="Payment Method"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCardPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/imgPaymentMethod"
                        android:layout_width="109dp"
                        android:layout_height="58dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_momo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvPaymentMethodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cvCardPayment"
                    android:lineHeight="20dp"
                    android:text="Thanh toán bằng ví Momo"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNameCartPayemnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPaymentMethodName"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/cvCardPayment"
                    android:lineHeight="20dp"
                    android:text="Nguyen Nhat Lam"
                    android:textColor="@color/textColor"
                    android:textSize="10dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/imgPricePaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNameCartPayemnt"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/cvCardPayment"
                    android:lineHeight="20dp"
                    android:text="$ 256.40"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imgChangePaymentMethod"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_navigate_next_24"
                    app:tint="#00623B" />
            </RelativeLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/cvCardPayment"
                    android:drawableStart="@drawable/ic_voucher"
                    android:gravity="center"
                    android:text="Voucher"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="right|center_vertical"
                    android:text="Choose"
                    android:textColor="#D9D07E"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="25dp"

                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvCardPayment"
                    android:drawableLeft="@drawable/ic_shipping"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:text="Shipping time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="right|center_vertical"
                    android:text="Now"
                    android:textColor="#D9D07E"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="137dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button_oval"
                android:gravity="center"
                android:lineHeight="20dp"
                android:text="Amount Detail"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="right"
                    android:text="$ 0.0"
                    android:textColor="#D9D07E"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="center"
                    android:text="Shipping Charges"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="right"
                    android:text="$ 2.0"
                    android:textColor="#D9D07E"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cvCardPayment"
                    android:gravity="right"
                    android:text="$ 0.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/custom_button_oval"
                android:text="Pay now"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>