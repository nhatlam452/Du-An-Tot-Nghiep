<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:id="@+id/layoutStore"
    android:layout_height="70dp">

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tvStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sư Vạn Hạnh"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:gravity="center_vertical"
        android:textStyle="italic"
        android:lines="1"
        android:layout_below="@id/tvStoreName"
        android:id="@+id/tvStoreAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="357 Đ. Cộng Hòa, Phường 13, Tân Bình, Thành phố Hồ Chí Minh 700000, Việt Nam"
        />
    <ImageView
        android:id="@+id/imgStoreInfo"
        android:layout_alignParentRight="true"
        android:tint="@color/colorPrimary"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_info_24"
        tools:ignore="UseAppTint" />
</RelativeLayout>