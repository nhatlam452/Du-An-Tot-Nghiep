<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="520dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_border_top_shape">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo_green" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgIcon"
        android:alpha="0.2"
        android:scaleType="center"
        android:src="@drawable/ic_logo_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgIcon"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:background="#E800623B"
                    android:lineHeight="20dp"
                    android:text="Add Your New Address"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSavedAddress"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="12dp" />
        </RelativeLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tipAddressTitle"
            android:layout_width="345dp"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Address Title">

            <EditText
                android:id="@+id/edtAddressTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:lineHeight="20dp"
                android:lines="1"
                android:textColor="@color/textColor"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tipAddAddress"
            android:layout_width="345dp"
            app:errorEnabled="true"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Address">

            <EditText
                android:id="@+id/edtAddAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:lineHeight="20dp"
                android:lines="1"
                android:textColor="@color/textColor"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tipAddCity"
            android:layout_width="345dp"
            app:errorEnabled="true"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="City">

            <EditText
                android:id="@+id/edtAddCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:focusable="false"
                android:lineHeight="20dp"
                android:textColor="@color/textColor"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tipAddDistrict"
            android:layout_width="345dp"
            app:errorEnabled="true"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="District">

            <EditText
                android:id="@+id/edtAddDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:focusable="false"
                android:lineHeight="20dp"
                android:textColor="@color/textColor"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tipAddWard"
            android:layout_width="345dp"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Ward">

            <EditText
                android:id="@+id/edtAddWard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:focusable="false"
                android:lineHeight="20dp"
                android:textColor="@color/textColor"
                android:textSize="14dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</RelativeLayout>