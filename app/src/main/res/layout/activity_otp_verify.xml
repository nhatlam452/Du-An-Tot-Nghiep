<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".Activities.OtpVerifyActivity">
    <ImageView
        android:id="@+id/imgLogoForgotPassword"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_green"
        />
    <ImageView
        android:id="@+id/imgBackOtpVerify"
        android:layout_marginStart="15dp"
        android:layout_gravity="left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_back"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:lineHeight="20dp"
        android:textStyle="bold"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="OTP Send !"
        android:textSize="20dp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_width="289dp"
        android:layout_height="20dp"
        android:text="We've sent a OTP to : "
        />
    <TextView
        android:id="@+id/tvPhoneNumberSendOtp"
        android:textStyle="bold"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_width="289dp"
        android:layout_height="20dp"
        android:text="0909916020"
        />
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="228dp"
        android:layout_height="222dp"
        android:src="@drawable/img_7"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:lineHeight="22.5dp"
            android:textSize="14dp"
            android:id="@+id/edtOTP1"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:padding="10dp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />

        <EditText
            android:lineHeight="22.5dp"
            android:textSize="14dp"
            android:id="@+id/edtOTP2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:padding="10dp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />

        <EditText
            android:lineHeight="22.5dp"
            android:textSize="14dp"
            android:id="@+id/edtOTP3"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:padding="10dp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />

        <EditText
            android:lineHeight="22.5dp"
            android:textSize="14dp"
            android:id="@+id/edtOTP4"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:padding="10dp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />

        <EditText
            android:lineHeight="22.5dp"
            android:textSize="14dp"
            android:id="@+id/edtOTP5"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:padding="10dp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />

        <EditText
            android:lineHeight="22.5dp"
            android:textSize="14dp"
            android:id="@+id/edtOTP6"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:padding="10dp"
            android:textStyle="bold"
            tools:ignore="LabelFor"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDR"
            android:layout_width="111dp"
            android:layout_height="23dp"
            android:lineHeight="22.5dp"
            android:text="Didn't Receive ?"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView

            android:id="@+id/tvResendOtp"
            android:layout_width="56dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@id/tvDR"
            android:lineHeight="22.5dp"
            android:text="Resend"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnConfirmOtp"
        android:lineHeight="20dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:text="Confirm"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_oval"
        />
    <TextView
        android:id="@+id/tvContactUs"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimary"
        android:lineHeight="22.5dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Contact us"
        android:textSize="15dp"
        android:textAlignment="center"
        />
</LinearLayout>